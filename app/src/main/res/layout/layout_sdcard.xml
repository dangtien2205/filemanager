<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_sdcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_sdcard">
        <ImageView
            android:id="@+id/iconCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/ic_sdcard"/>
        <TextView
            android:id="@+id/txtBuiltIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SdCard"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:layout_toRightOf="@id/iconCard"
            android:textSize="14sp"/>
        <ProgressBar
            android:id="@+id/pb1"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBuiltIn"
            android:layout_toRightOf="@id/iconCard"
            android:max="100"
            android:progress="50"/>
        <TextView
            android:id="@+id/txtInternal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:text="6,0 GB/12, GB"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_extsdcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_sdcard">
        <ImageView
            android:id="@+id/iconCard1"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sdcard"/>
        <TextView
            android:id="@+id/txtSDcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExtSdCard"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:layout_toRightOf="@id/iconCard1"
            android:textSize="14sp"/>
        <ProgressBar
            android:id="@+id/pb2"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSDcard"
            android:layout_toRightOf="@id/iconCard1"
            android:max="100"
            android:progress="50"/>
        <TextView
            android:id="@+id/txtExternal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:text="6,0 GB/12, GB"/>
    </RelativeLayout>
</LinearLayout>